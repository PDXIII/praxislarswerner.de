---
const { name, title, image } = Astro.props;

---

<header class="sm:grid grid-cols-2 items-center justify-center bg-brand lg:w-2/3 mx-auto">
    <img src={image.url} alt={image.description} />
    <div class="z-10 text-center sm:text-left text-white p-4">
        <h1 class="text-4xl font-smallCapsBold tracking-wider">{name}</h1>
        {title && <h1 class="text-xl font-primaryExtraLight" >{title}</h1>}
    </div>
</header>