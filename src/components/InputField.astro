---

interface Props {
    id: string;
    label: string;
    type: string;
    placeholder: string;
    class?: string
    pattern?: string
}
const { id, label, type, placeholder, pattern, class: classList } = Astro.props;
---

<div class={`group flex overflow-hidden border-e border-brand ${classList || ""}`}>
    <label class="basis-24 flex-shrink-0 text-right text-white bg-brand p-2 group-focus-within:bg-black transition-all " for={id}>
        {label}
    </label>

    <input id={id} name={label} pattern={pattern}    class="flex-1  border-brand border shrink-2 p-2  group-focus-within:border-black transition-all" type={type} placeholder={placeholder} />
</div>
